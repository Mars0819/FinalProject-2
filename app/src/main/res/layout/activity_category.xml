<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Products.CategoryMenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnTshirts"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_transparent"
            android:text="T-Shirts"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnFormals"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/btnTshirts"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_transparent"
            android:text="Formals"
            android:textColor="@color/primaryColor" />

        <Button
            android:id="@+id/btnBottomwear"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/btnFormals"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_transparent"
            android:text="Bottom Wear"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/btnShoes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/btnBottomwear"
            android:layout_margin="8dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/button_transparent"
            android:text="Shoes"
            android:textColor="@color/blue" />

    </RelativeLayout>

</ScrollView>
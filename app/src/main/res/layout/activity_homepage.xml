<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".Products.HomepageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnClothing"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Clothing"
            android:background="@drawable/button_transparent"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/btnElectronics"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/btnClothing"
            android:background="@drawable/button_transparent"
            android:text="Electronics"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/btnBooks"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/btnElectronics"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_transparent"
            android:text="Books"
            android:textColor="@color/blue" />

    <Button
        android:id="@+id/btnOtherItems"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/btnBooks"
        android:layout_margin="8dp"
        android:layout_marginStart="200dp"
        android:background="@drawable/button_transparent"
        android:text="Other Items"
        android:textColor="@color/blue" />

    </RelativeLayout>

</ScrollView>